<div id="page_wrapper">
  <h1>New Posts</h1>
  <!-- agregamos un formulario -->
  <%= form_for :post, url: posts_path do |f| %>
    <% if @post.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@post.errors.count, "error") %>
        prevented this post from saving</h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <!-- field to enter the title -->
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <!-- field to enter the body -->
      <%= f.label :body %><br>
      <%= f.text_field :body %>
    </p>
    <p>
      <!-- send button -->
      <%= f.submit %>
    </p>
  <% end %>
</div>
